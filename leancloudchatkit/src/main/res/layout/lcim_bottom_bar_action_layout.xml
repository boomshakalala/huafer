<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/input_bar_layout_action"
    android:layout_width="match_parent"
    android:background="@color/base_bg"
    android:layout_height="160dp"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:visibility="gone"
    android:weightSum="4">

    <TextView
        android:id="@+id/input_bar_btn_camera"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:drawablePadding="2dp"
        android:drawableTop="@drawable/lcim_bottom_bar_camera_button_normal"
        android:gravity="center"
        android:text="拍照"
        android:textColor="#666"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/input_bar_btn_picture"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:drawablePadding="2dp"
        android:drawableTop="@drawable/lcim_bottom_bar_picture_button_normal"
        android:gravity="center"
        android:text="相册"
        android:textColor="#666"
        android:textSize="11sp" />
</LinearLayout>
