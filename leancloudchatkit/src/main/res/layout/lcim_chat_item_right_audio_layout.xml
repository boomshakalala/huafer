<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="5dp"
    android:background="@drawable/huafen_chat_item_right_bg"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/chat_item_audio_duration_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:maxLines="1"
        android:layout_marginRight="@dimen/lcim_chat_horizontal_margin"
        android:textColor="#fff" />

    <cn.leancloud.chatkit.view.LCIMPlayButton
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/chat_item_audio_play_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        custom:left="false" />
</LinearLayout>