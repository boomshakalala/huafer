<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="false"><shape android:shape="rectangle">

            <!-- 填充颜色 -->
            <solid android:color="@color/base_pink"></solid>
            <!-- 线的宽度，颜色黑色 -->
            <stroke android:width="1dp" android:color="@color/base_pink"></stroke>
            <!-- 矩形的圆角半径 -->
            <corners android:radius="80dp" />
        </shape></item>
    <item android:state_pressed="true" android:state_selected="true"><shape android:shape="rectangle">

            <!-- 填充颜色 -->
            <solid android:color="@color/white"></solid>
            <!-- 线的宽度，颜色黑色 -->
            <stroke android:width="1dp" android:color="@color/white"></stroke>
            <!-- 矩形的圆角半径 -->
            <corners android:radius="80dp" />
        </shape></item>

</selector>