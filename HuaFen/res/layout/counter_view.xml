<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/tvDay1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="0.5dp"
        android:paddingBottom="0.5dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        style="@style/bigTextWhite"
        tools:text="0"
        android:background="@drawable/counter_shape"
        />
    <TextView
        android:id="@+id/tvDay2"
        android:layout_marginLeft="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="0.5dp"
        android:paddingBottom="0.5dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        style="@style/bigTextWhite"
        android:gravity="center"
        tools:text="0"
        android:background="@drawable/counter_shape"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/smallText"
        android:textSize="9sp"
        android:text=" 天 "
        android:layout_gravity="center_vertical"
        />
    <TextView
        android:id="@+id/tvHour1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="0.5dp"
        android:paddingBottom="0.5dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        style="@style/bigTextWhite"
        android:gravity="center"
        tools:text="0"
        android:background="@drawable/counter_shape"
        />
    <TextView
        android:id="@+id/tvHour2"
        android:layout_marginLeft="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="0.5dp"
        android:paddingBottom="0.5dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        style="@style/bigTextWhite"
        android:gravity="center"
        tools:text="0"
        android:background="@drawable/counter_shape"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/smallText"
        android:textSize="9sp"
        android:text=" 时 "
        android:layout_gravity="center_vertical"
        />
    <TextView
        android:id="@+id/tvMinute1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="0.5dp"
        android:paddingBottom="0.5dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        style="@style/bigTextWhite"
        android:gravity="center"
        tools:text="0"
        android:background="@drawable/counter_shape"
        />
    <TextView
        android:id="@+id/tvMinute2"
        android:layout_marginLeft="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="0.5dp"
        android:paddingBottom="0.5dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        style="@style/bigTextWhite"
        android:gravity="center"
        tools:text="0"
        android:background="@drawable/counter_shape"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/smallText"
        android:textSize="9sp"
        android:text=" 分 "
        android:layout_gravity="center_vertical"
        />
    <TextView
        android:id="@+id/tvSecond1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="0.5dp"
        android:paddingBottom="0.5dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        style="@style/bigTextWhite"
        android:gravity="center"
        tools:text="0"
        android:background="@drawable/counter_shape"
        />
    <TextView
        android:id="@+id/tvSecond2"
        android:layout_marginLeft="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="0.5dp"
        android:paddingBottom="0.5dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        style="@style/bigTextWhite"
        android:gravity="center"
        tools:text="0"
        android:background="@drawable/counter_shape"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/smallText"
        android:textSize="9sp"
        android:text=" 秒"
        android:layout_gravity="center_vertical"
        />
</LinearLayout>