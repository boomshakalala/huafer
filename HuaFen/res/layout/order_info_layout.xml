<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/item_margin"
    >

    <LinearLayout
        android:id="@+id/llOrderNo"
        android:layout_marginTop="@dimen/item_margin"
        android:paddingLeft="@dimen/side"
        android:paddingRight="@dimen/side"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/normalTextBlackEnable"
            android:text="订单编号"
            />
        <TextView
            android:id="@+id/tvOrderNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            style="@style/normalTextBlackEnable"
            tools:text="5451245415450045451515545"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llOrderTime"
        android:layout_marginTop="@dimen/item_margin"
        android:paddingLeft="@dimen/side"
        android:paddingRight="@dimen/side"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/normalTextBlackEnable"
            android:text="下单时间"
            />
        <TextView
            android:id="@+id/tvOrderCreateTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            style="@style/normalTextBlackEnable"
            tools:text="5451245415450045451515545"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llPayMethod"
        android:layout_marginTop="@dimen/item_margin"
        android:paddingLeft="@dimen/side"
        android:paddingRight="@dimen/side"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/normalTextBlackEnable"
            android:text="支付方式"
            />
        <TextView
            android:id="@+id/tvPayMethod"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            style="@style/normalTextBlackEnable"
            tools:text="支付宝"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llPayTime"
        android:layout_marginTop="@dimen/item_margin"
        android:paddingLeft="@dimen/side"
        android:paddingRight="@dimen/side"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/normalTextBlackEnable"
            android:text="支付时间"
            />
        <TextView
            android:id="@+id/tvPayTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            style="@style/normalTextBlackEnable"
            tools:text="2017-06-24 13:08"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llShipTime"
        android:layout_marginTop="@dimen/item_margin"
        android:paddingLeft="@dimen/side"
        android:paddingRight="@dimen/side"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/normalTextBlackEnable"
            android:text="发货时间"
            />
        <TextView
            android:id="@+id/tvShipTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            style="@style/normalTextBlackEnable"
            tools:text="2017-06-24 13:08"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llReceiptTime"
        android:layout_marginTop="@dimen/item_margin"
        android:paddingLeft="@dimen/side"
        android:paddingRight="@dimen/side"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/normalTextBlackEnable"
            android:text="收货时间"
            />
        <TextView
            android:id="@+id/tvReceiptTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            style="@style/normalTextBlackEnable"
            tools:text="2017-06-24 13:08"
            />
    </LinearLayout>

</LinearLayout>