<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/base_bg"
    android:orientation="vertical">

    <com.huapu.huafen.scrollablelayoutlib.PagerSlidingTabStrip
        android:id="@+id/pagerStrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:pstsTabPaddingLeftRight="35px"
        app:pstsIndicatorPadding="35px"
        app:pstsIndicatorColor="@color/base_pink"
        app:pstsTabTextColor="@color/text_color"
        app:pstsIndicatorHeight="0dp"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>