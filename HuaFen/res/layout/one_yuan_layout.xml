<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="#66000000">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        >
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            fresco:viewAspectRatio="0.92"
            fresco:actualImageScaleType="centerCrop"
            fresco:placeholderImage="@drawable/one_yuan_tip"
            fresco:placeholderImageScaleType="centerCrop"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="20dp"
            >

            <TextView
                android:id="@+id/tvNo"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:background="@drawable/one_no_shape"
                style="@style/normalTextWhite"
                android:gravity="center"
                android:text="不参与"
                />

            <TextView
                android:layout_marginLeft="40dp"
                android:id="@+id/tvYes"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:background="@drawable/one_yes_shape"
                style="@style/normalTextWhite"
                android:gravity="center"
                android:text="参与"
                />
        </LinearLayout>
    </FrameLayout>

</FrameLayout>