<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:background="@color/white"
                android:orientation="vertical">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/base_divider_height"
                    android:background="@color/divider_black"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/layoutPersonalData"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_layout_states"
                    android:paddingBottom="@dimen/mine_padding_top"
                    android:paddingTop="@dimen/mine_padding_top">

                    <TextView
                        style="@style/normalText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/side"
                        android:text="个人资料" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/side"
                        android:background="@drawable/right_enter" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/base_divider_height"
                    android:layout_marginLeft="@dimen/side"
                    android:background="@color/divider_black" />

                <RelativeLayout
                    android:id="@+id/layoutBlack"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_layout_states"
                    android:paddingBottom="@dimen/mine_padding_top"
                    android:paddingTop="@dimen/mine_padding_top">

                    <TextView
                        style="@style/normalText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/side"
                        android:text="已屏蔽的人" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin_right"
                        android:layout_toLeftOf="@+id/ivRight1"
                        android:textColor="@color/text_color_gray"
                        android:textSize="@dimen/ts_des_28" />

                    <ImageView
                        android:id="@+id/ivRight1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/side"
                        android:background="@drawable/right_enter" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/base_divider_height"
                    android:layout_marginLeft="@dimen/side"
                    android:background="@color/divider_black"
                    android:visibility="gone" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_layout_states"
                    android:paddingBottom="@dimen/mine_padding_top"
                    android:paddingTop="@dimen/mine_padding_top"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/side"
                        android:text="清理缓存"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/ts_des_28" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/side"
                        android:background="@drawable/icon_set_clean" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/base_divider_height"
                    android:background="@color/divider_black"
                    android:visibility="gone" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:background="@color/white"
                android:orientation="vertical">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/base_divider_height"
                    android:background="@color/divider_black"
                    android:visibility="gone" />


                <RelativeLayout
                    android:id="@+id/ivSetting"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_layout_states"
                    android:paddingBottom="@dimen/mine_padding_top"
                    android:paddingTop="@dimen/mine_padding_top">

                    <TextView
                        style="@style/normalText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/side"
                        android:text="留言设置" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/side"
                        android:background="@drawable/right_enter" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/base_divider_height"
                    android:layout_marginLeft="@dimen/side"
                    android:background="@color/divider_black" />

                <RelativeLayout
                    android:id="@+id/ivMessage"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_layout_states"
                    android:paddingBottom="@dimen/mine_padding_top"
                    android:paddingTop="@dimen/mine_padding_top">

                    <TextView
                        style="@style/normalText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/side"
                        android:text="消息提醒设置" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/side"
                        android:background="@drawable/right_enter" />
                </RelativeLayout>

                <View
                    android:id="@+id/view_family"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/base_bg" />


                <RelativeLayout
                    android:id="@+id/layoutAbout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_layout_states"
                    android:paddingBottom="@dimen/mine_padding_top"
                    android:paddingTop="@dimen/mine_padding_top">

                    <TextView
                        style="@style/normalText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/side"
                        android:text="关于花粉儿" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/side"
                        android:background="@drawable/right_enter" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/base_divider_height"
                    android:layout_marginLeft="@dimen/side"
                    android:background="@color/divider_black"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/layoutBuy"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_layout_states"
                    android:paddingBottom="@dimen/mine_padding_top"
                    android:paddingTop="@dimen/mine_padding_top"
                    android:visibility="gone">

                    <TextView
                        style="@style/normalText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/side"
                        android:text="给我一个好评吧" />

                    <ImageView
                        android:id="@+id/ivRight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/side"
                        android:background="@drawable/right_enter" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/base_divider_height"
                    android:background="@color/divider_black"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvBtnLogout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="@dimen/margin_top"
                android:background="@color/white"
                android:gravity="center"
                android:text="退出登录"
                android:textColor="@color/text_color" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>