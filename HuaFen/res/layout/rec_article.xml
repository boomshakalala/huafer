<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingBottom="5dp"
        android:paddingLeft="@dimen/side"
        android:paddingRight="@dimen/side">

        <TextView
            android:id="@+id/tv_rec_article"
            style="@style/bigText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/pink_vertical_line"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="推荐花语"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/right_enter"
            android:gravity="center_vertical"
            android:text="查看更多"
            android:textColor="@color/tv_gray" />
    </RelativeLayout>

    <View style="@style/divider_line_horizontal" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rl_rec_article"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
