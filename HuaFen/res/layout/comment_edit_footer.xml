<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <View
        style="@style/divider_line_horizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <CheckBox
            android:layout_marginLeft="@dimen/side"
            android:layout_marginTop="10dp"
            android:id="@+id/chbShow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@drawable/chb_selector"
            android:gravity="top|center_horizontal"
            android:background="@null"
            android:checked="false"
            />
        <LinearLayout
            android:layout_marginLeft="@dimen/image_to_text"
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tvShowDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="展示商品，所有人可见"
                />
            <TextView
                android:layout_marginTop="@dimen/text_to_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/smallTextGray"
                android:text="评价详情商品信息默认只有自己可见\n勾选展示商品，则所有人可见"
                />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>