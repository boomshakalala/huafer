<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/share_dialog_bg"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/rl_date_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/common_list_grey_selector" 
            android:orientation="horizontal">
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_divider_height"
            android:layout_alignParentBottom="true"
            android:background="@color/base_tab_bar_divider" />

        <RelativeLayout
            android:id="@+id/rl_customer_date_true"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/common_list_grey_selector" >

            <TextView
                android:id="@+id/tv_customer_date_true"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical|center_horizontal"
                android:padding="6dp"
                android:text="确定"
                android:textColor="@color/base_pink"
                android:textSize="@dimen/ts_des_28" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_divider_height"
                android:layout_alignParentBottom="true"
                android:background="@color/base_tab_bar_divider" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_customer_date_cencal"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/common_list_grey_selector" >

            <TextView
                android:id="@+id/tv_customer_date_cencal"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:padding="11dp"
                android:text="取消"
                android:textColor="@color/base_pink"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>