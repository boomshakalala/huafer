<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="5dp"
        >
        <EditText
            android:layout_marginRight="@dimen/side"
            android:layout_marginLeft="@dimen/side"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:id="@+id/etOwnerNotice"
            android:maxLength="500"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="@null"
            android:gravity="left"
            style="@style/normalText"
            android:hint="快来编辑自己的店铺公告吧"
            android:textColorHint="@color/base_tab_bar_divider"
            />
        <TextView
            android:id="@+id/tvLength"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/normalTextGray"
            android:text="0/500"
            android:layout_below="@id/etOwnerNotice"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>

</RelativeLayout>