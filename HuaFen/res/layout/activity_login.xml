<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:src="@drawable/bg_login" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="top">

        <TextView
            android:id="@+id/back"
            style="@style/normalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/personal_title_back" />

        <TextView
            style="@style/bigText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="登录"
            android:textColor="@color/white" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/thrid_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvBtnWechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/image_to_text"
                android:drawableTop="@drawable/wechat_icon"
                android:gravity="center_horizontal"
                android:text="微信登录"
                android:textColor="#2cc432"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvBtnAlipay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:drawablePadding="@dimen/image_to_text"
                android:drawableTop="@drawable/alipay_icon"
                android:gravity="center_horizontal"
                android:text="支付宝登录"
                android:textColor="#00aaee"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvbtnPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:drawablePadding="@dimen/image_to_text"
                android:drawableTop="@drawable/phone_login"
                android:gravity="center_horizontal"
                android:text="手机登录"
                android:textColor="#FF7F50"
                android:textSize="12sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/llll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="0.5dp"
                android:button="@null"
                android:checked="true"
                android:drawableLeft="@drawable/ok_check"
                android:drawablePadding="@dimen/image_to_text" />

            <TextView
                android:id="@+id/tvClause"
                style="@style/normalTextGray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_vertical"
                android:text="花粉儿条款与规范"
                android:textSize="12dp" />

        </LinearLayout>
    </LinearLayout>


</FrameLayout>