<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:background="@color/white"
    >
    <RadioGroup
        android:id="@+id/rg"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="1dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@drawable/rect_pink_shape"
        android:checkedButton="@+id/rb1">

        <RadioButton
            android:id="@id/rb1"
            style="@style/comment_sub_title_rb_style_left"
            android:text="全部评价" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#FF6677"/>
        <RadioButton
            android:id="@+id/rb2"
            style="@style/comment_sub_title_rb_style"
            android:text="全部评价"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#FF6677"/>
        <RadioButton
            style="@style/comment_sub_title_rb_style"
            android:text="全部评价"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#FF6677"/>
        <RadioButton
            style="@style/comment_sub_title_rb_style_right"
            android:text="全部评价"
            />
    </RadioGroup>


    <View
        android:layout_marginTop="14.5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/base_tab_bar_divider"/>
</LinearLayout>