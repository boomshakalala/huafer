<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:baselineAligned="false"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/pwd_one_tv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/verification_edit_bg_normal"
            android:gravity="center"
            android:textColor="#333333"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/pwd_two_tv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/password_space"
            android:background="@drawable/verification_edit_bg_normal"
            android:gravity="center"
            android:textColor="#333333"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/pwd_three_tv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/password_space"
            android:background="@drawable/verification_edit_bg_normal"
            android:gravity="center"
            android:textColor="#333333"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/pwd_four_tv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/password_space"
            android:background="@drawable/verification_edit_bg_normal"
            android:gravity="center"
            android:textColor="#333333"
            android:textSize="18sp" />

    </LinearLayout>

    <EditText
        android:id="@+id/sdk2_pwd_edit_simple"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:cursorVisible="false"
        android:inputType="numberPassword"
        android:maxLength="4"
        android:textColor="#00000000" />

</FrameLayout>