<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/flContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/llRemarks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_below="@+id/ivGirl"
            android:id="@+id/llRemark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@color/white"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/layoutMemo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/normalText"
                    android:layout_centerVertical="true"
                    android:text="订单备注"/>
                <TextView
                    android:id="@+id/tvMemoHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/smallTextGray"
                    android:text="@string/order_confirm_empty_tip"
                    android:layout_centerVertical="true"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/right_enter"
                    android:layout_alignParentRight="true" />


            </RelativeLayout>
            <View
                android:id="@+id/viewLineMemo"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:layout_height="@dimen/base_divider_height"
                android:background="@color/base_tab_bar_divider" />

            <TextView
                android:id="@+id/tvMemo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/normalTextGray"
                android:visibility="gone"
                android:layout_marginTop="10dp" />
        </LinearLayout>
        <ImageView
            android:layout_marginBottom="-30dp"
            android:id="@id/ivGirl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/remarks_girl"/>
    </RelativeLayout>


</FrameLayout>