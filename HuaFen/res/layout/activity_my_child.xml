<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg"
    android:orientation="vertical" >


    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/layoutFirstChild"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_layout_states"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:visibility="gone" >

            <TextView
                android:id="@+id/tvFirstChildSex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/side"
                android:text="小公主"
                style="@style/normalText" />

            <TextView
                android:id="@+id/tvFirstChildBirthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/image_to_text"
                android:layout_toLeftOf="@+id/ivRight1"
                android:text="选择时间"
                style="@style/normalTextGray" />

            <ImageView
                android:id="@+id/ivRight1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/side"
                android:background="@drawable/right_enter" />
        </RelativeLayout>

        <View
            android:id="@+id/viewFirst"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/base_divider_height"
            android:background="@color/divider_black"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/layoutSecondChild"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_layout_states"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:visibility="gone" >

            <TextView
                android:id="@+id/tvSecondChildSex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/side"
                android:text="小王子"
                style="@style/normalText" />

            <TextView
                android:id="@+id/tvSecondChildBirthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/image_to_text"
                android:layout_toLeftOf="@+id/ivRight"
                android:text="选择时间"
                style="@style/normalTextGray" />

            <ImageView
                android:id="@+id/ivRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/side"
                android:background="@drawable/right_enter" />
        </RelativeLayout>

        <View
            android:id="@+id/viewSecond"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/base_divider_height"
            android:background="@color/divider_black"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvBtnAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/base_pink"
        android:gravity="center"
        android:padding="@dimen/margin_bottom"
        android:text="编辑"
        android:textColor="@color/white"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/icon_my_babys" />

</RelativeLayout>