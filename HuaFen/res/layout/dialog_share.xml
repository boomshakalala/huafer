<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/share_dialog_bg">

    <GridView
        android:id="@+id/gvShare"
        android:layout_width="wrap_content"
        android:layout_height="270dp"
        android:background="@color/share_dialog_bg"
        android:clickable="false"
        android:focusable="false"
        android:verticalSpacing="-20dp"
        android:listSelector="@null"
        android:numColumns="3"
        android:scrollbars="none" />


    <Button
        android:id="@+id/btnShareCancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_bottom_height"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="215dp"
        android:background="@drawable/text_share_color"
        android:text="取消"
        android:textColor="@color/white"
        android:textSize="@dimen/ts_title_32" />
</RelativeLayout>