<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg"
    android:orientation="vertical" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:layout_marginLeft="@dimen/side"
                android:text="售价"
                style="@style/normalText" />

            <EditText
                android:id="@+id/etPrice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="left|center_vertical"
                android:hint="¥0"
                android:inputType="number"
                android:maxLength="6"
                android:paddingLeft="@dimen/side"
                android:textSize="@dimen/ts_des_28" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_divider_height"
            android:background="@color/divider_black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:layout_marginLeft="@dimen/side"
                android:text="邮费"
                style="@style/normalText" />

            <EditText
                android:id="@+id/etPostage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="left|center_vertical"
                android:hint="¥0"
                android:inputType="number"
                android:maxLength="3"
                android:paddingLeft="@dimen/side"
                android:textSize="@dimen/ts_des_28" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_divider_height"
            android:background="@color/divider_black" />
    </LinearLayout>
    <TextView
        android:id="@+id/tvCampaignTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:layout_marginLeft="20dp"
        android:text="活动商品不能修改售价哦~"
        android:textColor="@color/base_pink"
        android:textSize="@dimen/ts_des_28"
        android:visibility="gone"/>
</LinearLayout>