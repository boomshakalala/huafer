<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/item_title_x"
        android:layout_width="4dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/shape_corner_circle_pink" />

    <TextView
        android:id="@+id/item_title_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/item_title_x"
        android:gravity="center"
        android:text="明星活跃榜"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_large"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_title_sub_title"
        style="@style/normalTextGray"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/item_title_title"
        android:gravity="center" />

    <TextView
        android:id="@+id/item_title_right"
        style="@style/normalTextGray"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:drawablePadding="@dimen/image_to_text"
        android:drawableRight="@drawable/fill_black"
        android:gravity="center"
        android:text="查看全部" />

</RelativeLayout>