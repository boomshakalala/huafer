<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <LinearLayout
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/publish_add_brand"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:layout_marginLeft="@dimen/image_to_text"
                android:layout_toRightOf="@id/ivIcon"
                android:id="@+id/tvAddBrand"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="未找到？点击手动添加"
                android:textColorHint="@color/base_btn_normal"
                android:maxLength="30"
                style="@style/normalText"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/tvAdd"
                android:layout_alignParentRight="true"
                android:layout_width="50dp"
                android:layout_height="23dp"
                android:textSize="14sp"
                android:textColor="#CCCCCC"
                android:text="添加"
                android:gravity="center"
                android:background="@drawable/gray_round_border_rect"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>

        <View
            android:layout_marginTop="10dp"
            android:background="@color/divider_black"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            />
    </LinearLayout>

</merge>