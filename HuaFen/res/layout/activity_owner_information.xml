<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/owner_history_pic" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <RelativeLayout
                    android:id="@+id/rlNickName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/normalText"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="@dimen/side"
                        android:gravity="center_vertical"
                        android:text="昵称" />

                    <TextView
                        android:id="@+id/tvNickName"
                        style="@style/normalTextGray"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/side"
                        android:gravity="center_vertical"
                        tools:text="然后呢猫耳朵" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlAuth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rlNickName">

                    <View
                        android:id="@+id/line1"
                        style="@style/divider_line_horizontal"
                        android:layout_marginLeft="@dimen/side" /><!--android:layout_below="@+id/tvNickName"-->

                    <TextView
                        style="@style/normalText"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="@dimen/side"
                        android:gravity="center_vertical"
                        android:text="花粉儿认证" />

                    <TextView
                        android:id="@+id/tvAuth"
                        style="@style/normalTextGray"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/side"
                        android:gravity="center_vertical"
                        tools:text="歌手xxx" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlRegisteredTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rlAuth">

                    <View
                        android:id="@+id/line2"
                        style="@style/divider_line_horizontal"
                        android:layout_marginLeft="@dimen/side" /><!--android:layout_below="@id/tvAuth"-->

                    <TextView
                        style="@style/normalText"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="@dimen/side"
                        android:gravity="center_vertical"
                        android:text="注册时间" />

                    <TextView
                        android:id="@+id/tvRegisteredTime"
                        style="@style/normalTextGray"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/side"
                        android:gravity="center_vertical"
                        tools:text="2016-02-23" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlBabyInformation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rlRegisteredTime">

                    <View
                        android:id="@+id/line3"
                        style="@style/divider_line_horizontal"
                        android:layout_marginLeft="@dimen/side" /><!--android:layout_below="@id/tvRegisteredTime"-->

                    <TextView
                        style="@style/normalText"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="@dimen/side"
                        android:gravity="center_vertical"
                        android:text="宝宝信息" />

                    <com.huapu.huafen.views.BabyInfoLayout
                        android:id="@+id/babyInfoLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/side"
                        android:layout_marginRight="@dimen/side"
                        android:gravity="center_vertical|right" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlResident"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rlBabyInformation">

                    <View
                        android:id="@+id/line4"
                        style="@style/divider_line_horizontal"
                        android:layout_marginLeft="@dimen/side" /><!--android:layout_below="@id/babyInfoLayout" -->

                    <TextView
                        style="@style/normalText"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="@dimen/side"
                        android:gravity="center_vertical"
                        android:text="常住地" />

                    <TextView
                        android:id="@+id/tvResident"
                        style="@style/normalTextGray"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/side"
                        android:gravity="center_vertical"
                        tools:text="北京-朝阳区" />
                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_verified"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_verified"
                    style="@style/normalText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/side"
                    android:text="实名认证" />

                <TextView
                    android:id="@+id/tv_verifiedStatus"
                    style="@style/normalTextGray"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/side"
                    android:gravity="center_vertical"
                    tools:text="未认证" />

                <View
                    android:id="@+id/line5"
                    style="@style/divider_line_horizontal"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/side" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bindZhimaLayout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvZm"
                    style="@style/normalText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/side"
                    android:text="芝麻信用" />

                <TextView
                    android:id="@+id/tvZmDesc"
                    style="@style/normalTextGray"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="17dp"
                    android:layout_marginRight="17dp"
                    android:drawablePadding="@dimen/image_to_text"
                    android:drawableRight="@drawable/right_enter"
                    android:gravity="center_vertical"
                    tools:text="已授权" />
            </RelativeLayout>

            <View
                android:id="@+id/line6"
                style="@style/divider_line_horizontal"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/side" />

            <RelativeLayout
                android:id="@+id/sinaWeiBoLayout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sinaWeiBo"
                    style="@style/normalText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/side"
                    android:text="新浪微博" />

                <TextView
                    android:id="@+id/sinaWeiBoStatus"
                    style="@style/normalTextGray"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="17dp"
                    android:layout_marginRight="17dp"
                    android:drawablePadding="@dimen/image_to_text"
                    android:drawableRight="@drawable/right_enter"
                    android:gravity="center_vertical"
                    tools:text="已授权" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>