<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg"
    >


    <RelativeLayout
        android:id="@+id/classification1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/tvOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/bigText"
            android:text="一元专区"
            android:gravity="center_horizontal"
            android:padding="@dimen/side"
            />
        <View
            android:layout_below="@id/tvOne"
            style="@style/divider_line_horizontal"/>
        <View
            android:layout_width="3dp"
            android:layout_height="wrap_content"
            android:background="@color/base_pink"
            android:layout_alignTop="@id/tvOne"
            android:layout_alignBottom="@id/tvOne"
            />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/classification2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        />

</LinearLayout>