<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/bindALipay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_layout_states"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/side"
            android:drawableLeft="@drawable/icon_bind_list_ali"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="支付宝绑定"
            android:textColor="@color/text_color"
            android:textSize="@dimen/ts_des_28" />

        <ImageView
            android:id="@+id/ivAlipayArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_right"
            android:background="@drawable/right_enter" />

        <TextView
            android:id="@+id/tvBindAlipay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/ivAlipayArrow" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/base_divider_height"
        android:layout_marginLeft="@dimen/margin_left"
        android:background="@color/divider_black" />

    <RelativeLayout
        android:id="@+id/bindWechat"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_layout_states"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/side"
            android:drawableLeft="@drawable/icon_bind_list_wechat"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="微信绑定"
            android:textColor="@color/text_color"
            android:textSize="@dimen/ts_des_28" />

        <ImageView
            android:id="@+id/ivWechatArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_right"
            android:background="@drawable/right_enter" />

        <TextView
            android:id="@+id/tvBindWechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/ivWechatArrow"
            android:gravity="center_vertical" />
    </RelativeLayout>

</LinearLayout>