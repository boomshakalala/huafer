<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.huapu.huafen.views.PullToRefreshRecyclerView
            android:id="@+id/ptrRecyclerReply"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.huapu.huafen.views.HLoadingStateView
            android:id="@+id/loadingStateView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toast_bg"
        android:orientation="vertical">

        <View style="@style/divider_line_horizontal" />

        <TextView
            android:id="@+id/tvEditReply"
            style="@style/normalTextGray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/text_rectangle_white_e6e6e6_stroke_bg"
            android:maxLines="3"
            android:padding="7dp" />
    </LinearLayout>

</LinearLayout>