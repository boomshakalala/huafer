<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/side"
        android:paddingRight="@dimen/side"
        >

        <ImageView
            android:id="@+id/ivDeleteBaby"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="10dp"
            android:src="@drawable/del_baby"
            android:visibility="gone"
            tools:visibility="visible"
            />

        <TextView
            android:id="@+id/tvBabyTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/normalText"
            android:layout_gravity="center_vertical"
            tools:text="小公主"
            />
        <TextView
            android:id="@+id/tvBirth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/normalText"
            android:text="2015-01-06"
            android:layout_gravity="center_vertical"
            />
        <ImageView
            android:id="@+id/rightArrow"
            android:layout_marginLeft="@dimen/image_to_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right_enter"
            android:layout_gravity="center_vertical"
            android:visibility="visible"
            tools:visibility="visible"
            />

    </LinearLayout>

    <View
        style="@style/divider_line_horizontal"/>

</LinearLayout>