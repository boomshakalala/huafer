<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    

    <RelativeLayout 
        android:id="@+id/reportUntruth"
        android:layout_width="match_parent"
        android:layout_height="@dimen/head_bar_height"
        android:background="@color/white"
        >
        <TextView 
            android:id="@+id/tvReportTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/report_untruth"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/side"
            android:textSize="@dimen/ts_des_28"
            android:textColor="@color/text_color"
            />
        <Button
            android:id="@+id/btnChecked"
            android:layout_width="@dimen/complaint_checked"
            android:layout_height="@dimen/complaint_checked"
            android:layout_centerVertical="true"
            android:background="@drawable/checkbox_pay"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/complaint_checked_margin_right"            
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false" />
        <View
            android:id="@+id/untruthDivider"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            style="@style/divider_line_horizontal"/>
    </RelativeLayout>
    
</RelativeLayout>
