<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/articleCover"
            android:layout_width="90dp"
            android:layout_height="90dp"

            />

        <TextView
            android:id="@+id/tvContent"
            android:layout_marginLeft="@dimen/image_to_text"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/smallText"
            android:gravity="center_vertical"
            android:background="@drawable/shape_moment_content"
            android:maxLines="4"
            tools:text="asdadasadaasdasdasdasdadasasdasdasdasdasdasdasdasdasaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
            android:ellipsize="end"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/drag_icon"
            android:paddingLeft="@dimen/side"
            android:paddingRight="@dimen/side"
            />

    </LinearLayout>
    <View
        style="@style/divider_line_horizontal"/>
</LinearLayout>