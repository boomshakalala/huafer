<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="235dp"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/bg_confirm_received_head"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:orientation="vertical"
        android:background="@drawable/bg_bottom_corner_white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_normal"
            android:text="@string/text_confirm_received_1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_normal"
            android:layout_marginTop="10dp"
            android:text="@string/text_confirm_received_2"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_marginTop="22dp">
            <Button
                android:id="@+id/btnDialogLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:textColor="@color/white"
                android:textSize="@dimen/button_text_size"
                android:background="@drawable/bottom_confirm_received_btn_gray"
                android:text="我再想想"/>
            <Button
                android:id="@+id/btnDialogRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:textColor="@color/white"
                android:textSize="@dimen/button_text_size"
                android:layout_alignParentRight="true"
                android:background="@drawable/bottom_confirm_received_btn_pink"
                android:text="确认收货"/>

        </RelativeLayout>
    </LinearLayout>


</LinearLayout>